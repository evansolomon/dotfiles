[user]
	email = evan@evanalyze.com
	name = Evan Solomon
[push]
	default = simple
[help]
	autocorrect = 1
[color]
	ui = true
[rerere]
	enabled = 1
[core]
	excludesfile = ~/.gitignore
	pager = less -F -X
[merge]
	defaultToUpstream = true
[diff]
	algorithm = patience
[alias]
	amend = commit --amend --no-edit
	sortbranch = for-each-ref --sort=-committerdate --format='%(refname:short)' refs/heads/
