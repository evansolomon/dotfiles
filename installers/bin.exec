#!/usr/bin/env bash

mkdir -p $DOTFILES/ignored-bin

# git changelog
echo "Installing git changelog"
curl -s https://raw.github.com/evansolomon/git-changelog/master/git-changelog > $DOTFILES/ignored-bin/git-changelog
chmod +x $DOTFILES/ignored-bin/git-changelog

# git pluck
echo "Installing git pluck"
curl -s https://raw.github.com/evansolomon/git-pluck/master/git-pluck > $DOTFILES/ignored-bin/git-pluck
chmod +x $DOTFILES/ignored-bin/git-pluck

# Sublime Text shortcut
if [ -f "/Applications/Sublime Text 2.app/Contents/SharedSupport/bin/subl" ]; then
  echo "Linking subl executable"
  ln -nfs "/Applications/Sublime Text 2.app/Contents/SharedSupport/bin/subl" $DOTFILES/ignored-bin/subl
  ln -nfs "/Applications/Sublime Text 2.app/Contents/SharedSupport/bin/subl" $DOTFILES/ignored-bin/st
fi
