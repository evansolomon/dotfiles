#!/usr/bin/env bash

section "Checking if 'dev' docker machine exists"
docker-machine ls | ack "^dev" >/dev/null 2>&1
if [[ $? -ne 0 ]]; then
  info "Creating 'dev' docker machine"
  docker-machine create \
    --driver virtualbox \
    --virtualbox-disk-size "50000" \
    --virtualbox-memory "2048" \
    dev
fi
