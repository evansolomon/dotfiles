#!/usr/bin/env bash

section "Checking PIP packages"
cached_pip_list=$(pip list)
for package in $(read_list pip-packages); do
  status "Checking $package"
  echo $cached_pip_list | ack "$package" >/dev/null && success "$package already installed" || {
    info "Installing $package from PIP"
    if [[ $(pip install $package >/dev/null 2>&1) -eq 0 ]]; then
      success "Installed $package"
    fi
  }
done

