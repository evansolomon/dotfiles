#!/usr/bin/env bash

section "Checking for impromptu prompt"
if [[ ! -d ~/.impromptu ]]; then
  info "Installing Impromptu prompt"
  git clone git@github.com:evansolomon/my-impromptu.git ~/.impromptu && cd ~/.impromptu && npm install

  if [[ $? -eq 0 ]]; then
    success "Installed Impromptu prompt"
  fi
else
  success "Impromptu prompt already installed"
fi
